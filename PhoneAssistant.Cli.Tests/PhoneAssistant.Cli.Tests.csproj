  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <ProjectReference Include="..\PhoneAssistant.Cli\PhoneAssistant.Cli.csproj" />
  </ItemGroup>
    
</Project>
