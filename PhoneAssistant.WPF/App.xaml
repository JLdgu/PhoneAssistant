<Application x:Class="PhoneAssistant.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:PhoneAssistant.WPF.Views"
             xmlns:viewmodels="clr-namespace:PhoneAssistant.WPF.ViewModels"
             Startup="OnStartup"
             Exit="OnExit"
             DispatcherUnhandledException="OnDispatcherUnhandledException">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:PhoneMainViewModel}">
            <views:PhoneMainView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SimMainViewModel}">
            <views:SimMainView/>
        </DataTemplate>
    </Application.Resources>
</Application>
