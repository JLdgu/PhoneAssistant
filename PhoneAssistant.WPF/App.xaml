<Application x:Class="PhoneAssistant.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:phone="clr-namespace:PhoneAssistant.WPF.Features.Phone"
             xmlns:simcard="clr-namespace:PhoneAssistant.WPF.Features.SimCard"
             Startup="OnStartup"
             Exit="OnExit"
             DispatcherUnhandledException="OnDispatcherUnhandledException">
    <Application.Resources>
        <DataTemplate DataType="{x:Type phone:PhoneMainViewModel}">
            <phone:PhoneMainView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type simcard:SimMainViewModel}">
            <simcard:SimCardMainView/>
        </DataTemplate>
    </Application.Resources>
</Application>
