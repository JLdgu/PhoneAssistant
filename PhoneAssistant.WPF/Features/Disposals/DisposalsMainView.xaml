<UserControl x:Class="PhoneAssistant.WPF.Features.Disposals.DisposalsMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:PhoneAssistant.WPF.Shared"
             xmlns:viewmodel="clr-namespace:PhoneAssistant.WPF.Features.Disposals"
             MaxHeight="1080"
             d:Background="Beige"
             d:DataContext="{d:DesignInstance Type=viewmodel:DisposalsMainViewModel,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="500"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <shared:HeaderMainView HeaderIcon="DeleteOutline" HeaderText="Disposals" />
        <GroupBox Grid.Row="1"
                  Margin="5"
                  materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                  Header="myScomis Import"
                  Style="{StaticResource MaterialDesignGroupBox}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Text="myScomis Phone CIs to import (.xlsx)" />
                    <Image Grid.Row="1"
                           Grid.Column="1"
                           Width="500"
                           Margin="15,0,0,0"
                           HorizontalAlignment="Left"
                           Source="/Features/Disposals/CISearch.png" />
                </StackPanel>

                <Button Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,4,10,0"
                        Command="{Binding SelectMyScomisFileCommand}"
                        Content="{materialDesign:PackIcon Kind=FolderOpenOutline,
                                                          Size=20}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        ToolTip="Find file" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Margin="0,4,10,0"
                         Padding="5,10"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding ScomisFile}" />

                <Button Grid.Row="2"
                        Width="50"
                        Margin="0,4,10,4"
                        HorizontalAlignment="Left"
                        Command="{Binding ExecuteMyScomisImportCommand}"
                        Content="{materialDesign:PackIcon Kind=DatabaseImportOutline,
                                                          Size=20}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        ToolTip="Start myScomis Import" />
                <TextBlock Grid.Row="2"
                           Grid.Column="2"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           d:Text="Latest Import"
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Text="{Binding LatestMSImport}" />

            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2"
                  Margin="5"
                  materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                  Header="SCC Import"
                  Style="{StaticResource MaterialDesignGroupBox}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.ColumnSpan="2"
                           Margin="5,5"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           Text="SCC Collection Request to import (.xls)" />
                <Button Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,4,10,0"
                        Command="{Binding SelectSCCFileCommand}"
                        Content="{materialDesign:PackIcon Kind=FolderOpenOutline,
                                                          Size=20}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        ToolTip="Find File" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Margin="0,4,10,0"
                         Padding="5,10"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding SCCFile}" />
            </Grid>
        </GroupBox>

        <materialDesign:Card Grid.Row="3"
                             Margin="0,5,0,0"
                             Padding="5,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5,0,5,0"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Text="myScomis" />
                    <Button Grid.Column="0"
                            Width="50"
                            Margin="0,4,10,4"
                            HorizontalAlignment="Left"
                            Command="{Binding ExecuteMyScomisImportCommand}"
                            Content="{materialDesign:PackIcon Kind=DatabaseImportOutline,
                                                              Size=20}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            ToolTip="Start myScomis Import" />
                    <TextBlock Margin="20,0,5,0"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Text="Phone Assistant" />
                    <Button Grid.Column="0"
                            Width="50"
                            Margin="0,4,20,0"
                            HorizontalAlignment="Left"
                            Command="{Binding ExecutePAImportCommand}"
                            Content="{materialDesign:PackIcon Kind=DatabaseImportOutline,
                                                              Size=20}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            ToolTip="Start PA Import" />
                    <TextBlock Margin="5"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Text="SCC" />
                    <Button Grid.Column="0"
                            Width="50"
                            Margin="0,4,20,0"
                            HorizontalAlignment="Left"
                            Command="{Binding ExecuteSCCImportCommand}"
                            Content="{materialDesign:PackIcon Kind=DatabaseImportOutline,
                                                              Size=20}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            ToolTip="Start myScomis Import" />

                </StackPanel>
                <TextBlock Grid.Row="1"
                           Margin="5,5"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           Text="Import Log" />

                <!--<TextBlock Grid.Row="2"
                           Margin="0,4,0,0"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Text="{Binding Log}"
                           TextWrapping="Wrap" />-->
                <ListView Grid.Row="2" ItemsSource="{Binding LogItems, Mode=OneWay}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
