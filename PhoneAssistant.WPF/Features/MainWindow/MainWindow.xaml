<Window
    x:Class="PhoneAssistant.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="clr-namespace:PhoneAssistant.WPF.Shared"
    xmlns:viewmodel="clr-namespace:PhoneAssistant.WPF.Features.MainWindow"
    Title="Phone Assistant"
    Width="900"
    Height="600"
    MinWidth="600"
    MinHeight="400"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
    d:Height="400"
    d:Width="600"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Column="0"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <!--<RadioButton Visibility="Hidden" d:Visibility="Visible"
                         Style="{StaticResource MaterialDesignTabRadioButton}"
                         Command="{Binding UpdateViewCommand}" CommandParameter="{x:Static viewmodel:ViewType.Dashboard}">
                <StackPanel>
                    <materialDesign:PackIcon Width="24" Height="24" HorizontalAlignment="Center"
                                         Kind="ViewDashboardOutline" />
                    <TextBlock Text="Dashboard" />
                </StackPanel>
            </RadioButton>-->
            <RadioButton
                Margin="0,10,0,0"
                Command="{Binding UpdateViewCommand}"
                CommandParameter="{x:Static viewmodel:ViewType.Phones}"
                Style="{StaticResource MaterialDesignTabRadioButton}">
                <StackPanel>
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        Kind="CellphoneScreenshot" />
                    <TextBlock Text="Phones" />
                </StackPanel>
            </RadioButton>
            <RadioButton
                Command="{Binding UpdateViewCommand}"
                CommandParameter="{x:Static viewmodel:ViewType.Sims}"
                Style="{StaticResource MaterialDesignTabRadioButton}">
                <StackPanel>
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        Kind="SimOutline" />
                    <TextBlock Text="SIM Cards" />
                </StackPanel>
            </RadioButton>
            <RadioButton
                Command="{Binding UpdateViewCommand}"
                CommandParameter="{x:Static viewmodel:ViewType.ServiceRequests}"
                Style="{StaticResource MaterialDesignTabRadioButton}">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        Kind="RoomServiceOutline" />
                    <TextBlock HorizontalAlignment="Center" Text="Service" />
                    <TextBlock HorizontalAlignment="Center" Text="Requests" />
                </StackPanel>
            </RadioButton>
        </StackPanel>
        <StackPanel
            Grid.Column="0"
            Margin="0,0,0,10"
            VerticalAlignment="Bottom"
            Orientation="Vertical">
            <RadioButton
                Command="{Binding UpdateViewCommand}"
                CommandParameter="{x:Static viewmodel:ViewType.Settings}"
                Style="{StaticResource MaterialDesignTabRadioButton}">
                <StackPanel>
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        Kind="CogOutline" />
                    <TextBlock Text="Settings" />
                </StackPanel>
            </RadioButton>
        </StackPanel>

        <StackPanel
            Grid.Column="1"
            d:Background="Aquamarine"
            Orientation="Vertical">
            <ContentControl Content="{Binding SelectedViewModel}" />
        </StackPanel>
    </Grid>
</Window>
